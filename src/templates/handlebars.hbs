 
{{#each this}}
<div class="country-card">
    <h1 class="country-card__title">{{name}}</h1>
 <div class="country-card__wrapper">  
<div class="country-card__data">
    <p class="country-card__capital"><b>Capital: </b>{{capital}}</p>
    <p class="country-card__population"><b>Population: </b> {{population}}</p>
      <p><b>Languages:</b>
    <ul class="country-card__language-group" >
        {{#each languages}}
<li class="country-card__language-item">{{name}}</li>
        {{/each}}
   </ul>
</p>
    </div>
    <div class="country-card__flag">
        <img src="{{flag}}" alt="flag"  height="330px">
    </div>
</div>
</div>

{{/each}}
